{
	"name": "macOS",
    "shell": "zsh",
    "shell_framework": "oh-my-zsh",
    "shell_theme": "spaceship-prompt",
    "shell_plugins": [
        "zsh-autosuggestions",
        "zsh-syntax-highlighting"
    ],
	"system_packages": [
        "vim",
        "git",
        "curl",
        "wget",
        "grc",
        "htop",
        "bat"
    ],
    "configs_home": [
        "macos=.zshrc",
        ".grc/default=grc.zsh"
    ],
    "custom_installers": [
        "iterm2"
    ],
    "manual": [
        "Load 'configs/manual/iterm2/default=main.json' config into iTerm2",
        "Install 'magnet' from appstore",
        "Install 'alfred' from appstore",
        "Install 'dash' from appstore",
        "Install 'little snitch' and 'micro snitch'"
    ]
}